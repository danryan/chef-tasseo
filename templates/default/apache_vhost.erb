#
# Generated by Chef for <%= node['fqdn'] %>
# Local modifications will be overwritten.
#
<VirtualHost *:80>
  ServerName        <%= node['tasseo']['url'] %>
  ProxyRequests     Off

  LogLevel debug
  ErrorLog /var/log/apache2/tasseo_error.log
  CustomLog /var/log/apache2/tasseo_access.log combined

  # Local reverse proxy authorization override
  # 
  # Most unix distribution deny proxy by default
  # (ie /etc/apache2/mods-enabled/proxy.conf in Ubuntu)
  <Proxy http://localhost:<%= node['tasseo']['port'] %>/*>
    Order deny,allow
    Allow from all
  </Proxy>

  ProxyPreserveHost On
  ProxyPass         /  http://localhost:<%= node['tasseo']['port'] %>/
  ProxyPassReverse  /  http://localhost:<%= node['tasseo']['port'] %>/

</VirtualHost>


